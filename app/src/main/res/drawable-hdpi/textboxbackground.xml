<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_focused="true">
		<shape android:layout_margin="4dp">
			<gradient android:startColor="#ffffaa" android:centerColor="#ffffdd"
				android:centerY="0.65" android:endColor="#ffffaa" android:angle="270" />
			<stroke android:width="2dp" android:color="#7b5335" />
			<corners android:radius="2dp" />
			<padding android:left="11dp" android:top="11dp"
				android:right="11dp" android:bottom="11dp" />
		</shape>
	</item>

	<item android:state_enabled="false">
		<shape android:layout_margin="4dp">
			<gradient android:startColor="#6b6b6b" android:centerColor="#717171"
				android:centerY="0.65" android:endColor="#6b6b6b" android:angle="270" />
			<stroke android:width="2dp" android:color="#7b8081" />
			<corners android:radius="2dp" />
			<padding android:left="11dp" android:top="11dp"
				android:right="11dp" android:bottom="11dp" />
		</shape>
	</item>

	<item>
		<shape android:layout_margin="4dp">
			<gradient android:startColor="#dddddd" android:centerColor="#ffffff"
				android:centerY="0.65" android:endColor="#dddddd" android:angle="270" />
			<stroke android:width="2dp" android:color="#6b6e6e" />
			<corners android:radius="2dp" />
			<padding android:left="11dp" android:top="11dp"
				android:right="11dp" android:bottom="11dp" />
		</shape>
	</item>
</selector>